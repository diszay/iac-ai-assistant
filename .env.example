# Proxmox AI Infrastructure Assistant - Environment Configuration
# Copy this file to .env and update with your values

# Proxmox Configuration
PROXMOX__HOST=YOUR_PROXMOX_HOST
PROXMOX__PORT=8006
PROXMOX__USER=root@pam
PROXMOX__VERIFY_SSL=true
PROXMOX__TIMEOUT=30

# Proxmox Authentication (REQUIRED)
PROXMOX_ROOT_PASSWORD=your_proxmox_root_password_here

# Local AI Configuration
LOCAL_AI__MODEL_NAME=llama3.2
LOCAL_AI__OLLAMA_HOST=http://localhost:11434
LOCAL_AI__SKILL_LEVEL=intermediate
LOCAL_AI__MAX_TOKENS=2048
LOCAL_AI__TEMPERATURE=0.1

# Application Settings
DEBUG=false
ENVIRONMENT=development

# Security Settings
SECURITY__ENABLE_AUDIT_LOGGING=true
SECURITY__SESSION_TIMEOUT=3600

# Logging Configuration
LOGGING__LEVEL=INFO
LOGGING__FORMAT=json

# Master Password for Credential Encryption
MASTER_PASSWORD=your_secure_master_password_here